{% extends "admin.html" %}

    {% block title %}Dashboard{% endblock %}

    {% block navbar %}
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="/admin/dashboard/index">Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard/index"><i class="fa fa-desktop"></i> Overview</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/admin/article/index"><i class="fa fa-file-alt"></i> Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/category/index"><i class="fa fa-bars"></i> Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/page/index"><i class="fa fa-file-code"></i> Pages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/user/index"><i class="fa fa-users"></i> Users</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-expanded="false">Forum</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <a class="dropdown-item" href="/admin/forum/category"><i class="fa fa-bars"></i> Forum Categories</a>
                            <a class="dropdown-item" href="/admin/forum/topic"><i class="fa fa-th-list"></i> Forum Topics</a>
                            <a class="dropdown-item" href="/admin/forum/group"><i class="fa fa-tags"></i> Forum Groups</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
                    <li class="nav-item">
                        <a href="/" class="nav-link"><i class="fa fa-eye"></i> View Site</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Welcome {‌{ current_user.username }}</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}

    {% block body %}
        <section class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item nav-link disabled navbar-brand">Site Administration</li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/dashboard/index"><i class="fa fa-desktop"></i> Overview</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/article/index"><i class="fa fa-file-alt"></i> Articles <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/category/index"><i class="fa fa-bars"></i> Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/page/index"><i class="fa fa-file-code"></i> Pages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/user/index"><i class="fa fa-users"></i> Users</a>
                        </li>
                    </ul>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item nav-link disabled navbar-brand">Forum Administration</li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/forum/category"><i class="fa fa-bars"></i> Forum Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/forum/topic"><i class="fa fa-th-list"></i> Forum Topics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/forum/group"><i class="fa fa-tags"></i> Forum Groups</a>
                        </li>
                    </ul>
                </nav>

                <main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
                    <header class="blog-header">
                        <h1 class="blog-title">New Article</h1>
                        <p class="lead blog-description">My PHP MVC Framework</p>
                        <hr>
                    </header>

                    <section class="container-fluid">
                        <div class="row">
                            <article style="width: 100%">
                                {% if blog.errors is not empty %}
                                    <p>Errors:</p>
                                    <ul>
                                        {% for error in user.errors %}
                                            <li>{‌{ error }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                                <form method="post" action="/admin/article/create" id="formNewArticle">
                                    <input class="form-control" id="inputAuthor" name="article_author" type="hidden" value="{‌{ current_user.username }}" />
                                    <div class="form-group">
                                        <label for="inputTitle">Article Title</label>
                                        <input class="form-control" id="inputTitle" name="article_title" value="{‌{ blog.article_title }}" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="inputContent">Article Content</label>
                                        <textarea class="form-control" name="article_content" id="inputContent" cols="30" rows="10" required></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputTags">Article Tags</label>
                                        <input id="inputTags" class="form-control" name="article_tags" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Create Article</button>
                                </form>
                            </article>
                        </div>
                    </section>
                </main>
            </div>
        </section>
    {% endblock %}

    {% block footer %}{% endblock %}