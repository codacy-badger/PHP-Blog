{%  extends 'userLayout.html.twig' %}

{% block title %} Article {% endblock %}


{% block body %}

    <div class="container">
        <h4><a href="/profile/new-article">New article</a></h4>


        {% if posts %}

        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Date added</th>
                <th colspan="2" class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>

            {% for post in posts %}

            <tr>
                <td>{{ post.title }}</td>

                <td>{{ post.user_username}}</td>

                <td>{{ post.createdAt }}</td>
                <td>
                    <a href="/profile/{{ post.id }}/edit-article">update</a>
                </td>
                <td>
                    <a href="/profile/{{ post.id }}/delete-article">delete</a>
                </td>
            </tr>

            {% endfor %}

            </tbody>
        </table>

        {% else %}
            <p>Vous n'avez pas encore cr√©er d'article.</p>
        {% endif %}

    </div>

{% endblock %}