{%  extends 'admin.html.twig' %}

{% block title %} delete an article {% endblock %}


{% block body %}

    <div class="container">
        <div class="col-md-8 order-md-1">

            <form class="needs-validation" method="post" action="/admin/delete-article-confirmation" novalidate>

                <div class="mb-3">
                    <label for="title">Title :</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Article title" value="{{ single.title }}" autofocus required>
                    <small id="titleHelp" class="form-text text-muted">less than 50 characters.</small>
                    <div class="invalid-feedback">
                        Please enter a valid title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="headline">Headline :</label>
                    <textarea class="form-control" id="headline" name="headline" rows="5">{{ single.headline }}</textarea>
                </div>


                <div class="mb-3">
                    <label for="content">Content :</label>
                    <textarea class="form-control" id="content" name="content" rows="15">{{ single.content }}</textarea>
                </div>

                <div class="mb-3">
                    <input type="text" class="form-control" id="id" name="id" value="{{ single.id }}" hidden>
                </div>

                <div class="mb-3">
                    <input type="text" class="form-control" id="user_id" name="user_id" value="{{ user.id }}" hidden>
                </div>

                <hr class="mb-4">

                <p>You confirm ?</p>
                <button class="btn btn-danger btn-lg btn-block" type="submit">Delete</button>
                <button class="btn btn-secondary btn-lg btn-block" type="reset">Cancel</button>
            </form>
        </div>
    </div>

{% endblock %}