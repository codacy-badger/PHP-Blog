{%  extends 'adminLayout.html.twig' %}

{% block title %} User {% endblock %}


{% block body %}

    <div class="container">

        {% if users %}

            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Date added</th>
                    <th colspan="2" class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>

                {% for user in users %}

                    <tr>
                        <td>{{ user.username }}</td>

                        <td>{{ user.role}}</td>

                        <td>{{ user.registeredAt }}</td>
                        <td>
                            <a href="/admin/{{ post.id }}/edit-article">update</a>
                        </td>
                        <td>
                            <a href="/admin/{{ post.id }}/delete-article">delete</a>
                        </td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>

        {% else %}

            <p>Pas d'utilisateur inscrit.</p>

        {% endif %}

    </div>

{% endblock %}