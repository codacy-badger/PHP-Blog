{%  extends 'admin.html.twig' %}

{% block title %} Comment {% endblock %}


{% block body %}

    <div class="container">

            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th>Author</th>
                    <th>Post title</th>
                    <th>Comment</th>
                    <th>Date added</th>
                    <th colspan="2" class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>

                {% for comment in comments %}

                    <tr>
                        <td>{{ comment.user_username }}</td>
                        <td>{{ comment.post_title }}</td>

                        <td><p>{{ comment.content }}</p></td>

                        <td>{{ comment.createdAt }}</td>
                        <td>
                            <a href="/admin/{{ comment.id }}/edit-comment">publish</a>
                        </td>
                        <td>
                            <a href="/admin/{{ comment.id }}/delete-comment">delete</a>
                        </td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>

    </div>

{% endblock %}