{%  extends 'admin.html.twig' %}

{% block title %} New article {% endblock %}

{% block body %}

    <div class="container">

        <div class="col-md-8 order-md-1">

            <form class="needs-validation" method="post" action="/admin/create-article" novalidate>

                <div class="mb-3">
                    <label for="title">Title :</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Article title" value="{{ post.title }}" autofocus required>
                    <small id="titleHelp" class="form-text text-muted">less than 50 characters.</small>
                    <div class="invalid-feedback">
                        Please enter a valid title.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="headline">Headline :</label>
                    <textarea class="form-control" id="message" name="headline" rows="5"></textarea>
                    <small id="compteur" class="form-text text-muted">0 mots | 0 Character / 255</small>
                </div>

                <div class="mb-3">
                    <label for="content">Content :</label>
                    <textarea class="form-control" id="content" name="content" rows="15"></textarea>
                </div>

                <div class="mb-3">
                    <input type="text" class="form-control" id="FK_user_id" name="FK_user_id" value="{{ current_user.id }}" hidden>
                </div>

                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Publish</button>
                <a class="btn btn-warning btn-lg btn-block" href="/admin/show-article">Cancel</a>
            </form>
        </div>

    </div>


{% endblock %}
