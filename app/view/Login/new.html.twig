{%  extends 'layout.html.twig' %}

{% block title %}Log in{% endblock %}

{% block subTitle %} Log in{% endblock %}

{% block body %}

    <div class="blog-post">
        <div class="col-md-8 order-md-1">

            <form class="needs-validation" method="post" action="/login/create" novalidate>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" value="{{ email }}" autofocus required>
                    <small id="emailHelp" class="form-text text-muted">Your email address</small>
                    <div class="invalid-feedback">
                        Please enter a valid email address.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" value="" required>
                    <small id="emailHelp" class="form-text text-muted">Your password</small>
                    <div class="invalid-feedback">
                        Please enter a password.
                    </div>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember_me" {% if remember_me %} checked="checked" {% endif %}> Remember me
                    </label>
                </div>

                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Sign Up</button>
                <p class="mt-3"><a href="/password/forgot">Forgot password ?</a> </p>
            </form>
        </div>
    </div>

{% endblock %}